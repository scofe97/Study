<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.product.detail.ProductDetailFragment"
    android:background="@color/main_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:expandedTitleTextAppearance="@android:color/transparent">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            app:contentScrim="@color/main_background"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/productImageView"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"
                app:layout_constraintDimensionRatio="w,1:1.3" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:navigationIcon="?attr/homeAsUpIndicator"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                android:elevation="8dp"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintTop_toBottomOf="@id/appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:elevation="8dp">

            <TextView
                android:id="@+id/itemTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="급처(정품)버비리 토트백"

                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/text_first"

                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itemPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="90,000원"
                android:layout_marginTop="-12dp"
                android:fontFamily="@font/notosans_bold"
                android:textColor="@color/text_first"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemTitleTextView" />

            <TextView
                android:id="@+id/itemIntroductionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="대충 이러한 글이 들어갑니다."
                android:layout_marginTop="-8dp"
                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/text_second"

                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemPriceTextView"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/sellerImageView"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/itemIntroductionTextView"
                android:background="@drawable/profile_round"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/sellerNameTextView"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"
                android:layout_height="wrap_content"

                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/text_first"

                android:textStyle="bold"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/sellerImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/sellerImageView"
                app:layout_constraintBottom_toTopOf="@+id/sellerPhoneNuberTextView"
                tools:text="판매자 프로필 이름"/>

            <TextView
                android:id="@+id/sellerPhoneNuberTextView"
                android:layout_width="0dp"
                android:layout_marginStart="12dp"

                android:fontFamily="@font/notosans_regular"
                android:textColor="@color/text_first"
                android:layout_marginTop="-4dp"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/sellerImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sellerNameTextView"
                tools:text="010-xxxx-xxxx"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:backgroundTint="@color/main_back_elevated"
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:background="@color/white_100"
        android:elevation="8dp"
        android:paddingHorizontal="16dp">

        <ToggleButton
            android:id="@+id/bookmarkButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text=""
            android:textOff=""
            android:textOn=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_favorite"/>

        <Button
            android:id="@+id/chatButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text ="채팅방 생성"
            app:layout_constraintStart_toEndOf="@+id/bookmarkButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
